<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_source"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tx_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/img_source"
        app:layout_constraintStart_toEndOf="@+id/img_source"
        app:layout_constraintTop_toTopOf="@+id/img_source" />

    <TextView
        android:id="@+id/tx_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tx_source"
        app:layout_constraintStart_toEndOf="@+id/tx_source"
        app:layout_constraintTop_toTopOf="@+id/tx_source" />

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_source"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tx_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="En Büyük Trabzon"
        android:textColor="@color/black"
        android:textSize="@dimen/post_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_header" />

    <TextView
        android:id="@+id/tx_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Şampiyon Trabzonspor Şampiyon Trabzonspor Şampiyon Trabzonspor Şampiyon Trabzonspor Şampiyon Trabzonspor "
        android:textColor="#99000000"
        android:textSize="@dimen/post_body"
        app:layout_constraintEnd_toEndOf="@+id/tx_header"
        app:layout_constraintStart_toStartOf="@+id/tx_header"
        app:layout_constraintTop_toBottomOf="@+id/tx_header" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tx_body"
        app:layout_constraintTop_toBottomOf="@+id/tx_body"
        app:srcCompat="@drawable/ic_comment" />

    <TextView
        android:id="@+id/tx_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>